<div class="container centerall">
<div class="columns centerall">



<section class="column">
  <h2>Create New Comment</h2>

  <form class="new-comment-form">
    <div>
      <label for="new-comment-text">Comment Text</label>
      <input type="text" id="new-comment-text" name="new-comment-text" />
    </div>
    <button type="submit" class="btn">Comment</button>
  </form>
</section>

<section class="column box">
  <h2>Create New Food</h2>
<form class="new-food-form">
  <div class="control">
    <label for="new-food-name">Food Name</label>
    <div class="control">
      <input class="input" id="new-food-name" type="text" name="new-food-name" placeholder="e.g. pizza">
    </div>
  </div>

  <div class="field">
    <label for="new-food-description">Food Description</label>
    <div class="field">
      <input class="input" type="text" id="new-food-description" name="new-food-description" placeholder="e.g. Cheese">
    </div>
  </div>

  <button type="submit" class="button is-info">Food</button>
</form>
</section>






</div>

<div class="columns centerall">

  <h2 class="columns">Food:</h2>
  <div class="columns">
    {{#each potluck.food}}
      {{>food-details}}
    {{/each}}
  </div>

</div>

<div class="columns centerall">
  <h2 class="columns">Comments:</h2>
  <div class="columns">
    {{#each potluck.comments}}
      {{>comments}}
    {{/each}}
  </div>
</div>
</div>


{{#if potlucks.length}}
<section>
  <h2>Your Potluck</h2>
  <ol>
    {{#each potlucks as |potluck|}}
    <li>
      {{> potluck-details potluck}}
      <a href="/dashboard/edit/{{potluck.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


<script src="/js/add-food.js"></script>
<script src="/js/add-comment.js"></script>
